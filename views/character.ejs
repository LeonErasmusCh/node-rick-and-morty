<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Rick and Morty</title>
</head>

<body>

  <body>
    <%- include('navbar') %>

    <div class="container">
      <div class="row">
        <div class="col-6">
          <img src=<%=character.image%> class="card-img-top" alt="...">
        </div>
        <div class="col-6">
          <h1>Name: <%=character.name%>
          </h1>
          <h4>Status: <%=character.status%>
          </h4>
          <h4>Species: <%=character.species%>
          </h4>
          <h4>Gender: <%=character.gender%>
          </h4>
          <h4>Origin: <%=character.origin.name%>
          </h4>
          <h4>Location: <%=character.location.name%>
          </h4>
          <button id="postBtn" value="<%=character.name%>" type="submit" class="btn btn-warning" onclick="addFavorite()">Add Favorite</button>
        </div>
      </div>
    </div>


  </body>
  <script>
    const addFavorite = () => {
      
      let name = event.target.value
      console.log(name)

     fetch(`http://localhost:3000/character/${name}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({name :name}),
      }).then( window.location.assign('/'))
      

    }
  </script>

</html>